<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ContenedorPrincipal"
    tools:context=".ClientesActivity" >

    <TextView
        android:id="@+id/textViewClientesRHCimax"
        style="@style/FuenteTitulos"
        android:text="@string/clientesRHClimax" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9D9B9B"
        android:stretchColumns="0,1,2" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp"
            tools:ignore="UselessParent" >

            <Button
                android:id="@+id/buttonSincClient"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="@string/sincronizar" />

            <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/avisoVerde"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="#FFFFFF"
                    android:text="" />

                <TextView
                    android:id="@+id/avisoAmarillo"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="#FCC601"
                    android:text="" />

                <TextView
                    android:id="@+id/avisoRojo"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="#FFFFFF"
                    android:text="" />
            </LinearLayout>

            <Button
                android:id="@+id/buttonNuevo"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:onClick="onClickNuevo"
                android:text="@string/nuevo" />

        </TableRow>
    </TableLayout>

    <AutoCompleteTextView
        android:id="@+id/autoCompleteBuscar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="@string/buscar" >

        <requestFocus />
    </AutoCompleteTextView>

    <LinearLayout
        android:id="@+id/louyt"
        android:layout_width="match_parent"
        android:layout_height="286dp"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/listView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>
    </LinearLayout>

   

</LinearLayout>